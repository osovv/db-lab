<h1>Vendors</h1>

<div id="vendors" style="overflow-x: auto">
  <table style="white-space: nowrap">
    <thead>
    <tr>
      <th>Id</th>
      <th>Region</th>
      <th>Address</th>
      <th>Director name</th>
      <th colspan="3">Actions</th>
    </tr>
    </thead>

    <tbody>
    <% @vendors.each do |vendor| %>
      <tr>
        <td> <%= vendor.id %></td>
        <td> <%= vendor.region %></td>
        <td> <%= vendor.address %></td>
        <td> <%= vendor.director_name %></td>
        <td> <%= link_to 'Show', vendor %></td>
        <td> <%= link_to 'Edit', edit_vendor_path(vendor) %></td>
        <td> <%= link_to 'Destroy', vendor, method: :delete, confirm: 'Are you sure?' %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>


<%= link_to "New vendor", new_vendor_path %>
