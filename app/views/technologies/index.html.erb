<h1>Technologies</h1>

<div id="technologies" style="overflow-x: auto">
  <table style="white-space: nowrap">
    <thead>
    <tr>
      <th>Id</th>
      <th>Description</th>
      <th>Developer</th>
      <th>Duration</th>
      <th colspan="3">Actions</th>
    </tr>
    </thead>

    <tbody>
    <% @technologies.each do |technology| %>
      <tr>
        <td> <%= technology.id %></td>
        <td> <%= technology.description %></td>
        <td> <%= technology.developer %></td>
        <td> <%= technology.duration %></td>
        <td> <%= link_to 'Show', technology %></td>
        <td> <%= link_to 'Edit', edit_technology_path(technology) %></td>
        <td> <%= link_to 'Destroy', technology, method: :delete, confirm: 'Are you sure?' %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

<%= link_to "New technology", new_technology_path %>
