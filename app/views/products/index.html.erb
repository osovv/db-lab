<h1>Products</h1>

<div id="products" style="overflow-x: auto">
  <table style="white-space: nowrap">
    <thead>
    <tr>
      <th>Id</th>
      <th>Factory Id</th>
      <th>Department Id</th>
      <th>Technology Id</th>
      <th>Name</th>
      <th>Designation</th>
      <th>Weight</th>
      <th colspan="3">Actions</th>
    </tr>
    </thead>

    <tbody>
    <% @products.each do |product| %>
      <tr>
        <td> <%= product.id %></td>
        <td> <%= product.factory_id %></td>
        <td> <%= product.department_id %></td>
        <td> <%= product.technology_id %></td>
        <td> <%= product.name %></td>
        <td> <%= product.designation %></td>
        <td> <%= product.weight %></td>
        <td> <%= link_to 'Show', product %></td>
        <td> <%= link_to 'Edit', edit_product_path(product) %></td>
        <td> <%= link_to 'Destroy', product, method: :delete, confirm: 'Are you sure?' %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

<%= link_to "New product", new_product_path %>
